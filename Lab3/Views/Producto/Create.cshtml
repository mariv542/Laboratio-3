@model Lab3.Models.domain.Producto

@{
	ViewData["Title"] = "Agregar producto";
}

<h2 class="text-center mb-4" style="color:#d63384;">Agregar Producto</h2>

<form asp-action="Create" method="post" autocomplete="off" style="background-color: #fff0f5; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(214, 51, 132, 0.2);">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label" style="color: #c2185b;"></label>
        <input asp-for="Nombre" class="form-control" style="border: 1px solid #f8bbd0;" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CodigoDeBarra" class="form-label" style="color: #c2185b;"></label>
        <input asp-for="CodigoDeBarra" class="form-control" style="border: 1px solid #f8bbd0;" />
        <span asp-validation-for="CodigoDeBarra" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label" style="color: #c2185b;"></label>
        <input asp-for="Precio" class="form-control" style="border: 1px solid #f8bbd0;" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CantidadDisponible" class="form-label" style="color: #c2185b;"></label>
        <input asp-for="CantidadDisponible" class="form-control" style="border: 1px solid #f8bbd0;" />
        <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label" style="color: #c2185b;"></label>
    </div>

    <button type="submit" class="btn" style="background-color: #e91e63; color: white;">Guardar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>

<partial name="_ValidationScriptsPartial" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


